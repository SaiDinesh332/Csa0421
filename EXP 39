#include <stdio.h>
#include <stdlib.h>

int main() {
    int req[10], n, head, size;
    int seek = 0;

    printf("Enter number of requests: ");
    scanf("%d", &n);

    printf("Enter requests:\n");
    for (int i = 0; i < n; i++)
        scanf("%d", &req[i]);

    printf("Enter initial head position: ");
    scanf("%d", &head);

    printf("Enter disk size: ");
    scanf("%d", &size);

    for (int i = 0; i < n - 1; i++)
        for (int j = i + 1; j < n; j++)
            if (req[i] > req[j]) {
                int t = req[i];
                req[i] = req[j];
                req[j] = t;
            }

    int pos = 0;
    while (pos < n && req[pos] < head) pos++;

    for (int i = pos; i < n; i++) {
        seek += abs(req[i] - head);
        head = req[i];
    }

    seek += abs(size - head);
    head = 0;

    for (int i = 0; i < pos; i++) {
        seek += abs(req[i] - head);
        head = req[i];
    }

    printf("Total Seek Time = %d\n", seek);
    return 0;
}


OUTPUT:
Enter number of requests: 6
Enter requests:
176 79 34 60 92 11
Enter initial head position: 50
Enter disk size: 200
Total Seek Time = 382

