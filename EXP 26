#include <stdio.h>
#include <fcntl.h>
#include <unistd.h>
#include <sys/stat.h>

int main() {
    int fd;
    char buf[50];

    fd = open("file.txt", O_CREAT | O_WRONLY, 0644);
    write(fd, "UNIX File Management", 20);
    close(fd);

    fd = open("file.txt", O_RDONLY);
    read(fd, buf, 20);
    buf[20] = '\0';
    printf("File Content: %s\n", buf);
    close(fd);

    struct stat st;
    stat("file.txt", &st);
    printf("File Size: %ld bytes\n", st.st_size);

    return 0;
}

OUTPUT:
File Content: UNIX File Management
File Size: 20 bytes
File Content: UNIX File Management
File Size: 20 bytes
