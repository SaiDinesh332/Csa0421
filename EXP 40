#include <stdio.h>
#include <sys/stat.h>

int main() {
    struct stat s;
    stat("file.txt", &s);

    printf("File Permissions:\n");
    printf("User  : %c%c%c\n",
           (s.st_mode & S_IRUSR) ? 'r' : '-',
           (s.st_mode & S_IWUSR) ? 'w' : '-',
           (s.st_mode & S_IXUSR) ? 'x' : '-');

    printf("Group : %c%c%c\n",
           (s.st_mode & S_IRGRP) ? 'r' : '-',
           (s.st_mode & S_IWGRP) ? 'w' : '-',
           (s.st_mode & S_IXGRP) ? 'x' : '-');

    printf("Others: %c%c%c\n",
           (s.st_mode & S_IROTH) ? 'r' : '-',
           (s.st_mode & S_IWOTH) ? 'w' : '-',File Permissions:



           (s.st_mode & S_IXOTH) ? 'x' : '-');

    return 0;
}


OUTPUT:
 File Permissions:
User  : rw-
Group : r--
Others: r--


 
