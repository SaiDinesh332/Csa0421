#include <stdio.h>
#include <stdlib.h>

int main() {
    int req[10], n, head, size, dir;
    int seek = 0;

    printf("Enter number of requests: ");
    scanf("%d", &n);

    printf("Enter requests:\n");
    for (int i = 0; i < n; i++)
        scanf("%d", &req[i]);

    printf("Enter initial head position: ");
    scanf("%d", &head);

    printf("Enter disk size: ");
    scanf("%d", &size);

    printf("Enter direction (0-left, 1-right): ");
    scanf("%d", &dir);

    for (int i = 0; i < n - 1; i++)
        for (int j = i + 1; j < n; j++)
            if (req[i] > req[j]) {
                int t = req[i];
                req[i] = req[j];
                req[j] = t;
            }

    int pos = 0;
    while (pos < n && req[pos] < head) pos++;

    if (dir == 1) {
        for (int i = pos; i < n; i++) {
            seek += abs(req[i] - head);
            head = req[i];
        }
        seek += abs(size - head);
    } else {
        for (int i = pos - 1; i >= 0; i--) {
            seek += abs(req[i] - head);
            head = req[i];
        }
        seek += abs(head - 0);
    }

    printf("Total Seek Time = %d\n", seek);
    return 0;
}
OUTPUT:
 Enter number of requests: 6
Enter requests:
176 79 34 60 92 11
Enter initial head position: 50
Enter disk size: 200
Enter direction (0-left, 1-right): 1
Total Seek Time = 226

